<section id="hero" class="d-flex align-items-center justify-content-center">
    @*<img src="~/img/maxresdefault.jpg" />*@
    <div class="container" data-aos="fade-up">

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
            <div class="col-xl-6 col-lg-8">
                <h1>@SharedLocalizer.GetLocalizedHtmlString("istanbulukesfet")<span>.</span></h1>
                @*<h2>We are team of talanted digital marketers</h2>*@
            </div>
        </div>
        @*Katagoriler*@
        <div class="row mt-5 justify-content-center" data-aos="zoom-in" data-aos-delay="250">
            <div class="col-xl-2 col-md-4 col-6">
                <div class="icon-box">
                    <i class="ri-store-line"></i>
                    <h3><a asp-controller="Hotel" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("oteller")</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 col-6 ">
                <div class="icon-box">
                    <i class="ri-bar-chart-box-line"></i>
                    <h3><a asp-controller="Restaurant" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("restoranlar")</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 col-6 mt-4 mt-md-0">
                <div class="icon-box">
                    <i class="ri-calendar-todo-line"></i>
                    <h3><a asp-controller="HistoricalPlace" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("tarihimekanlar")</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 col-6 mt-4 mt-xl-0">
                <div class="icon-box">
                    <i class="ri-paint-brush-line"></i>
                    <h3><a asp-controller="FunPlace" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("eglencemekanlari")</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 col-6 mt-4 mt-xl-0">
                <div class="icon-box">
                    <i class="ri-database-2-line"></i>
                    <h3><a asp-controller="Park" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("parklar")</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 col-6 mt-4 mt-xl-0">
                <div class="icon-box">
                    <i class="ri-database-2-line"></i>
                    <h3><a asp-controller="Shop" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("alisveris")</a></h3>
                </div>
            </div>
        </div>

    </div>
</section><!-- End Hero -->
